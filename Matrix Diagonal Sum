#include <iostream>
#include <string>
using namespace std;

int main(){
    
    int size, sum = 0;
    
    cout << "Enter matrix size: ";
    cin >> size;
    int matrix[size][size];
    
    cout << "Enter matrix elements:" << endl;
    for (int i = 0; i < size; i++){
        for (int j = 0; j < size; j++){
            cin >> matrix[i][j];
        }
    }
    
    for (int i = 0; i < size; i++){
        sum += matrix[i][i];
        sum += matrix[i][size - i - 1];
    }
    
    if (size % 2 != 0) {
        sum -= matrix[size / 2][size / 2];
        // I THINK THIS SHOULD GET THE MIDDLE
    }
    
    cout << "Sum of diagonals: " << sum << endl;
    
    return 0;

}
